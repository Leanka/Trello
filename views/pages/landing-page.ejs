
  <% include ../partials/landing-header %>
	<div class="content container">
        <div class="jumbotron">
          <h1 class="display-4">Welcome to TRELOLO!</h1>
          <div id="auth-message" class="container">
            <% if(error && error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
